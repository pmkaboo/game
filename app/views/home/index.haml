%h1 ruby mine v0.1
.main_btns
	= link_to "delete cookies", delete_cookies_path, class: "btn"
	= link_to "save", "#", class: "save_game btn"

%hr

#stats
	%table
		%thead
			%tr.headers
				%th ore
				%th in inventory
				%th miners
				%th total value
				%th action
		%tbody
			- @game_data.each_pair do |name, ore_data|
				%tr{class: name}
					%td= name
					%td.amount= ore_data["amount"].to_i
					%td.miners= ore_data["miners"].to_i
					%td.value
					%td
						= link_to "hire", '#', class: "btn"
						= link_to "sell", '#', class: "btn"
		%tr.money
			%td
				money: 
				%span.value= @money
			%td
			%td
			%td
			%td= link_to "sell_all", "#", class: "btn"

%hr

#rocks
	- @game_data.keys.each do |name|
		.ore{class: name}


